!!! 5
html
  head
    != css('application')
    != js('login')
    meta(name="viewport", content="width=device-width initial-scale=1.0")
    link(href='http://fonts.googleapis.com/css?family=Lato:400,700|Inconsolata:400,700', rel='stylesheet', type='text/css')
    title Boardroom - Real-time Reflection and Story Boarding

  body#login-page
    .container
      h1
        span
          | Welcome to
        | Boardroom

      #social-login(action='/login', method='post')
        h2 sign in with
        each provider in providers
          - var icon = provider
          if provider == 'google'
            - icon = 'google-plus'
          button(onclick="javascript:window.location = href='oauth/#{provider}'")
            i(class="icon-#{icon}")
            span #{provider}
      #local-login
        h2 or sign in with boardroom local account
        form(action='/login', method='POST')
          label email
          input(type='text' name='username')
          label password
          input(type='password' name='password')
          input(type='submit')
        hr
        blockquote
          em
            | &ldquo;
          | Better than stickies on a wall.
          em
            | &rdquo;
      a#carbonfive-logo(href="http://www.carbonfive.com", target="_blank")
        | POWERED BY CARBON FIVE

  include ./includes/ga.jade
