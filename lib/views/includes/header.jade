include ./layout.jade

.navbar.navbar-fixed-top
  #board-nav.navbar-inner
    - if (typeof(userIdentity) !== 'undefined')
      a.btn.btn-navbar(data-toggle='collapse', data-target='.navbar-responsive-collapse')
        span.icon-bar
        span.icon-bar
    .title
      a.room-logo(href="/") BOARDROOM
      - if (typeof(board) !== 'undefined')
        input#name(type="text", value="#{board.name}", placeholder="Enter Title", autocomplete="off")
        span.icon-edit

    - if (typeof(userIdentity) !== 'undefined')
      #user-info.nav-collapse.collapse.navbar-responsive-collapse
        ul.nav
          - if (typeof(board) !== 'undefined')
            li
              span.copy-url
                span.icon-link
                span.tooltip Copy URL for this board.
            li
              span.download
                a(href="/boards/#{board._id}/csv" target='csv')
                  span.icon-download
                  span.tooltip Download to CSV
            li
              span.help.icon-info
                span.tooltip 
                  | Invite others to participate by copying the url or clicking on the link icon to the left.
                  br
                  br
                  | Double-click your board to add a note.
                  br
                  br
                  |Drag notes onto one another to create a group.
          - if (typeof(userIdentity) !== 'undefined')
            li
              div.user-id
                img.avatar(src=userIdentity.avatar, title=userIdentity.displayName)
                span #{userIdentity.displayName}
            li
              .logout
                a(href='/logout') logout
